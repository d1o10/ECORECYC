<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToCartMarketplace">

    <ImageView
        android:id="@+id/second_hand_item_pic"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/ic_launcher_background"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@color/transpa"
        />

    <ImageButton
        android:id="@+id/add_to_cart_marketplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/baseline_shopping_cart_24"
        />

        <TextView
            android:id="@+id/second_hand_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_below="@id/second_hand_item_pic"/>

        <TextView
            android:id="@+id/second_hand_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Double Door Cabinet"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="200dp"
            android:layout_below="@id/second_hand_item_pic"
            android:textColor="@color/black" />


    <TextView
        android:id="@+id/second_hand_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_hand_item_price"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/chatBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/second_hand_item_description"
        android:layout_marginStart="310dp"
        android:layout_marginTop="-20dp"
        android:background="#ffff"
        android:scaleType="fitCenter"
        android:src="@drawable/chat" />

    <TextView
        android:id="@+id/displayItemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item info will display here"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:layout_below="@id/second_hand_item_description"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/displayItemInfo">

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@id/displayItemInfo"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/backdrop2"
            android:hint="Add to Cart"
            android:textColorHint="@color/black"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/button2"
            android:hint="Buy Now"
            android:textColorHint="@color/white"
            />
    </LinearLayout>




</RelativeLayout>