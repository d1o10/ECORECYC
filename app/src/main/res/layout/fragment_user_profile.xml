<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileFragment"
    android:background="@color/primary_color">


    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:fontFamily="@font/poppins_reg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_5"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true" />

    <!-- Username TextView -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:text="Ariana Grande"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_reg"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Email TextView -->
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:text="grandeariana@gmail.com"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_reg"
        android:textColor="@color/white"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:background="@drawable/edittextbackground2"
        android:elevation="5dp">

        <!-- My Orders Button -->
        <ImageButton
            android:id="@+id/my_orders_btn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/transpa"
            android:scaleType="fitCenter"
            android:src="@drawable/my_orders" />


        <!-- My Listings Button -->
        <ImageButton
            android:id="@+id/my_listings_btn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/my_orders_btn"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-22dp"
            android:backgroundTint="@color/transpa"
            android:scaleType="fitCenter"
            android:src="@drawable/my_listings" />


        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_below="@+id/my_listings_btn"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="@color/transpa"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

        <ImageButton
            android:id="@+id/rateus_btn"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_below="@+id/settings_btn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-10dp"
            android:backgroundTint="@color/transpa"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_star_24"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:background="@color/transpa"
            android:textColor="@color/black"
            android:layout_below="@id/settings_btn"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:textSize="15dp"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/settingarrowbtn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="530dp"
            android:backgroundTint="@color/transpa"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24" />

        <!-- Logout Button -->
        <ImageButton
            android:id="@+id/logout_btn"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_below="@+id/rateus_btn"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/transpa"
            android:scaleType="fitCenter"
            android:src="@drawable/logout" />

    </RelativeLayout>
</RelativeLayout>
