<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/greetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi,"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dm_sans"
                    android:textSize="20sp"
                    android:paddingLeft="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/hiusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_sans"
                    android:padding="7dp"
                    android:text="fretxjsojw!"
                    android:textColor="@color/primary_color"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"
                    android:layout_toRightOf="@id/greetings"/>

                <ImageButton
                    android:id="@+id/notificationBtn"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="9dp"
                    android:background="@color/transpa"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/baseline_notifications_24"/>
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to make a sustainable impact today?"
                android:layout_marginTop="70dp"
                android:paddingLeft="30dp"
                android:fontFamily="@font/dmsans_reg"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Location"
                android:layout_marginTop="120dp"
                android:textColor="@color/black"
                android:paddingLeft="30dp"
                android:fontFamily="@font/dmsans_reg"
                />

            <Button
                android:id="@+id/locationbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banilad, Cebu City"
                android:background="@color/transpa"
                android:textColor="@color/black"
                android:paddingLeft="30dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/dmsans_reg"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/searchandchat">
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:paddingLeft="30dp"
                android:layout_marginTop="210dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/dm_sans"/>

            <ImageButton
                android:id="@+id/marketplacebutton"
                android:layout_width="341dp"
                android:layout_height="125dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="260dp"
                android:background="@drawable/marketplacecat"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:focusable="true"
                />

            <ImageButton
                android:id="@+id/recylinghubbutton"
                android:layout_width="341dp"
                android:layout_height="125dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="430dp"
                android:background="@drawable/recyclingcat"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/cleanupbtn"
                android:layout_width="339dp"
                android:layout_height="125dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="600dp"
                android:background="@drawable/cleanupcat"
                android:layout_centerHorizontal="true"
                />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </ScrollView>
</ScrollView>
