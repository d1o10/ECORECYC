<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/marketplace_back_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/cleanupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanup Events"
        android:layout_centerHorizontal="true"
        android:layout_margin="35dp"
        android:textSize="20sp"
        android:textColor="@color/primary_color"
        android:fontFamily="@font/poppins"/>

    <Button
        android:id="@+id/organize_cleanup_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/button2"
        android:text="Organize Cleanup"
        android:textSize="15sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/upcomingEventsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organize_cleanup_btn"
        android:text="Upcoming Events"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upcomingEventsText"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
