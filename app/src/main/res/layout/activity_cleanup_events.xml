<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/cleanupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanup Events"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="25sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/organize_cleanup_btn"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Organize Cleanup"
        android:layout_below="@id/cleanupText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button2" />

    <TextView
        android:id="@+id/upcomingEventsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/organize_cleanup_btn"
        android:text="Upcoming Events"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/upcomingEventsText"
        android:orientation="horizontal"
        android:layout_marginTop="10dp" />
</RelativeLayout>
